@model Verzamelwoede.Models.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Categories.First().Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Select Collections</label>
                <div>
                    @if (Model.Collections != null && Model.Collections.Any())
                    {
                        @foreach (var collection in Model.Collections)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@collection.Id" name="SelectedCollectionIds" id="collection_@collection.Id">
                                <label class="form-check-label" for="collection_@collection.Id">
                                    @collection.Name
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No collections available.</p>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-custom">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
