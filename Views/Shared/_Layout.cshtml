<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Verzamelwoede</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Verzamelwoede.styles.css" asp-append-version="true" />
    <style>
        /* Add styling for the top bar */
        .top-bar {
            background-color: #28190E;
            color: white;
            height: 95px; /* Adjust the height if needed */
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid top-bar">
        <div class="row">
            <div class="col-12 text-center">
                <h1>@ViewData["Title"]</h1> <!-- Use the page title dynamically here -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row ">
            <!-- Vertical navbar on the left side -->
            <nav style="background-color:#839073; height: 100vh;" class="d-flex align-items-start col-1 navbar navbar-expand-sm navbar-toggleable-sm navbar-light flex-column">
                <a class="text-white navbar-brand mb-3" asp-area="" asp-controller="Home" asp-action="Index">Verzamelwoede</a>
                <ul class="navbar-nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-area="" asp-controller="Items" asp-action="Index">Items</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-area="" asp-controller="Collections" asp-action="Index">Collections</a>
                    </li>
                </ul>
            </nav>
            
            <!-- Main content -->
            <div class="col-10">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Verzamelwoede - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
